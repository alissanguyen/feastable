mixin restaurantForm(restaurant = {})
    form(action="/add" method="POST" class="card")
        label(for="name") Name
        input(type="text" name="name")
        label(for = "description") Description
        input(type="text" name="description")
        - const choices = ['Wifi', 'Open 24/7', 'Dine-in', 'Delivery', 'Takeout', 'Family Friendly']
        - const categories = ['Italian', 'Vegan', 'Greek', 'Indian', 'Chinese', 'Mexican', 'Thai', 'Japanese', 'Vietnamese', 'French', 'Spanish', 'Mediterranean']
        ul.tags
            each choice in choices
                .tag.tag__choice
                    input(type="checkbox" id=choice value=choice name="tags")
                    label(for=choice) #{choice}
        ul.tags
            each category in categories
                .tag.tag__choice
                    input(type="checkbox" id=category value=category name="categories")
                    label(for=category) #{category}
        input(type='submit' value="Submit" class="button")

